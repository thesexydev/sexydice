[disabled]
  pointer-events none

.navbar-item
  font-size 25px

body 
  margin-top 60px


.navbar >.container
  display flex !important

.navbar-menu
  display flex !important
  flex-grow 1 
  flex-shrink 0
  background-color transparent
  box-shadow none

.navbar-end
  display flex
  justify-content flex-end !important
  margin-left auto
  margin-right 20px

.game__container
  min-height calc(100vh - 60px)
  display flex
  align-items center
  text-align center

.game__action 
  font-size 4rem
  line-height 1

.game__subaction 
  margin-top 50px
  font-size 1.4rem
  margin-bottom 0 !important

.game__btn
  margin 30px 0

.game__dictionary-reset
  position absolute 
  right 25px

.game__remaining-seconds
  //border: 3px solid #fff;
  border-radius: 10px;
  padding: 10px;
  font-size: 1.5rem;
  font-weight: bold;
  margin-right: 10px

  
@css {
  .pulse-animation {
    animation-duration: 2s;
    animation-iteration-count: infinite;
    animation-name: pulse;
    animation-timing-function: linear;
  }

  @keyframes pulse {
    0 % { transform: scale(1); }
    25 % { transform: scale(1.04); }
    40 % { transform: scale(1.08); }
    100 % { transform: scale(1); }
  }

}

