[disabled]
  pointer-events none

.navbar-item
  font-size 25px

body 
  margin-top 60px


.navbar >.container
  display flex !important

.navbar-menu
  display flex !important
  flex-grow 1 
  flex-shrink 0
  background-color transparent
  box-shadow none

.navbar-end
  justify-content flex-end !important
  margin-left auto
  margin-right 20px

.game__container
  min-height calc(100vh - 60px)
  display flex
  align-items center
  text-align center

.game__action 
  font-size 4rem
  line-height 1

.game__subaction 
  margin-top 50px
  font-size 2rem

.game__btn
  margin 30px 0